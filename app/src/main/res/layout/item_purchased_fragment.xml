<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="productinforesponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse"/>
    </data>

    <LinearLayout
        android:id="@+id/layout_purchsed_item"
        style="@style/MatchWrap"
        android:background="@drawable/list_item_selector"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/warrenty_icon"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="4dp"
                android:layout_height="4dp" />

            <ImageView
                android:id="@+id/brand_imageview"
                style="@style/m75w75"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_imageview"
                style="@style/m75w75"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/BothWrap"
                android:gravity="start"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_10"
                    android:visibility="gone"
                    android:text="@{productinforesponse.productName}"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    />

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@{ '\u20B9'+ productinforesponse.price}"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    />

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@{`Status ` + productinforesponse.status}"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    />

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@{productinforesponse.warrantyId}"
                    android:textColor="@color/ebony_clay"
                    android:visibility="invisible"
                    android:textSize="12.4sp"
                    />
                <ImageView
                    android:id="@+id/favourite_icon"
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/ebony_clay"
                    android:background="@drawable/ic_option_favorite"
                    android:textSize="12.4sp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</layout>