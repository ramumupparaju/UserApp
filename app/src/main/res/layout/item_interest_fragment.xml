<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="interestHistoryResponse"
            type="com.incon.connect.user.apimodel.components.history.purchased.InterestHistoryResponse"/>
    </data>

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@drawable/list_ripple_effect"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            style="@style/BothMatch"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/brand_iv"
                style="@style/m75w75"
                android:layout_gravity="center"
                android:layout_margin="25dp"/>

        </LinearLayout>

        <LinearLayout
            style="@style/BothMatch"
            android:layout_weight="1">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/product_iv"
                style="@style/m75w75"
                android:layout_margin="25dp"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/BothMatch"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <TextView
                style="@style/BothWrap"
                android:layout_marginTop="@dimen/margin_7"
                android:text="@{interestHistoryResponse.productName}"
                android:textColor="@color/ebony_clay"
                android:textSize="10.4sp"
                />

            <TextView
                style="@style/BothWrap"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@{interestHistoryResponse.price}"
                android:textColor="@color/ebony_clay"
                android:textSize="12.4sp"
                />

            <TextView
                style="@style/BothWrap"
                android:layout_marginTop="@dimen/margin_12"
                android:text="@{interestHistoryResponse.mobileNumber}"
                android:textColor="@color/ebony_clay"
                android:textSize="12.4sp"
                />

        </LinearLayout>

    </LinearLayout>
</layout>