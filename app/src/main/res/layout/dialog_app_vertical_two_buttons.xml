<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BothMatch"
    android:background="@drawable/dialog_shadow"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <TextView
        android:id="@+id/dialog_title_textView"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:lineSpacingExtra="13.4sp"
        android:padding="@dimen/margin_20"
        android:textColor="@color/alert_title"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginBottom="30dp"
        android:weightSum="2">

    <Button
        android:id="@+id/dialog_first_button"
        style="@style/MatchWrap"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_weight="1"
        android:background="@drawable/btn_white_stroke_nevada_selector"
        android:textColor="@color/text_nevada_white_selected"
        android:textSize="@dimen/text_size_13" />

    <Button
        android:id="@+id/dialog_second_button"
        style="@style/MatchWrap"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_weight="1"
        android:background="@drawable/btn_white_stroke_nevada_selector"
        android:textColor="@color/text_nevada_white_selected"
        android:textSize="@dimen/text_size_13" />
    </LinearLayout>

</LinearLayout>

