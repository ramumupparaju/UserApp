<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="productinforesponse"
            type="com.incon.connect.user.apimodel.components.status.ServiceStatus"/>
    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/MatchWrap"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_3"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_3"
        app:cardCornerRadius="@dimen/corner_radius">

        <RelativeLayout
            android:id="@+id/layout_return_item"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <!--brand image-->
            <ImageView
                android:id="@+id/brand_imageview"
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:alpha="70"/>

            <!--product image-->
            <ImageView
                android:id="@+id/product_imageview"
                style="@style/image_product_icon"
                android:layout_toRightOf="@id/brand_imageview"/>


            <!--product name-->
            <TextView
                android:id="@+id/product_name"
                style="@style/BothWrap"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_toRightOf="@id/product_imageview"
                android:maxLines="2"
                android:text="@={productinforesponse.product.name}"
                android:textAllCaps="true"
                android:textColor="@color/ebony_clay"
                android:textSize="12.4sp"/>

            <!--product model number-->
            <TextView
                android:id="@+id/model_number_tv"
                style="@style/BothWrap"
                android:layout_below="@id/product_name"
                android:layout_toRightOf="@id/product_imageview"
                android:text="@{`Mod No : ` + productinforesponse.product.modelNo}"
                android:textColor="@color/ebony_clay"
                android:textSize="10sp"/>

            <!--service center name-->
            <TextView
                android:id="@+id/merchant_name"
                style="@style/BothWrap"
                android:layout_below="@id/model_number_tv"
                android:layout_toRightOf="@id/product_imageview"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{productinforesponse.serviceCenter.name}"
                android:textColor="@color/black"
                android:textSize="10sp"/>

            <RelativeLayout
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dusty_gray">

                <HorizontalScrollView
                    android:id="@+id/status_scrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scrollbarSize="4dp"
                    android:scrollbarThumbHorizontal="@drawable/scrollbar"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:id="@+id/status_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/approval_views_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_layout">

                <Button
                    android:id="@+id/button_accept"
                    style="@style/style_submit_button"
                    android:layout_weight="1"
                    android:text="@string/action_accept"/>

                <Button
                    android:id="@+id/button_hold"
                    style="@style/style_submit_button"
                    android:layout_weight="1"
                    android:text="@string/action_hold"/>

                <Button
                    android:id="@+id/button_reject"
                    style="@style/style_submit_button"
                    android:layout_weight="1"
                    android:text="@string/action_reject"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>