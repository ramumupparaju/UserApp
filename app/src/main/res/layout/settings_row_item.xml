<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:padding="20dp"
    android:background="@drawable/list_ripple_effect">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_menu_icon"
        style="@style/BothWrap"
        android:layout_centerVertical="true"
        />

    <!-- Icon Right Arrow -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_right_arrow"
        style="@style/BothWrap"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_right_arrow_svg"
        />

    <TextView
        android:id="@+id/text_menu_title"
        style="@style/MatchWrap"
        android:textSize="15.4sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/image_menu_icon"
        android:layout_toLeftOf="@+id/image_right_arrow"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

</RelativeLayout>
