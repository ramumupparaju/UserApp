<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="toolbar"
            type="com.incon.connect.user.ui.BaseFragment" />
    </data>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:contentInsetStart="0dp">

        <RelativeLayout style="@style/BothMatch">

            <ImageView
                android:id="@+id/toolbar_left_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:paddingEnd="25dp"
                android:paddingStart="15dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_tab_settings" />

            <TextView
                android:id="@+id/toolbar_title_tv"
                style="@style/BothWrap"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_centerInParent="true"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="15.5sp" />

            <ImageView
                android:id="@+id/toolbar_right_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="2dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_uid_scan" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</layout>