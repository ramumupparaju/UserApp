<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="productinforesponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_favorite_item"
            style="@style/MatchWrap"
            android:background="@drawable/list_item_selector"
            android:minHeight="110dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/warrenty_icon"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin" />

                <ImageView
                    android:id="@+id/brand_imageview"
                    style="@style/m75w75"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_imageview"
                    style="@style/m75w75"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/product_details_layout"
                    style="@style/BothWrap"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_10"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp" />

                    <TextView
                        android:id="@+id/warranty_period"
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/green" />

        <View
            android:id="@+id/progress_status_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/red" />
    </RelativeLayout>
</layout>