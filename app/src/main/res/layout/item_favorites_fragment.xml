<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="favoritesResponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse"/>
    </data>

    <LinearLayout
        android:id="@+id/layout_favorite_item"
        style="@style/MatchWrap"
        android:background="@drawable/list_item_selector"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/warrenty_icon"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <ImageView
                android:id="@+id/brand_imageview"
                style="@style/m75w75"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_imageview"
                style="@style/m75w75"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            style="@style/Zero_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/BothWrap"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@{favoritesResponse.productName}"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    />

                <TextView
                    android:id="@+id/warranty_period"
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    />

                <TextView
                    style="@style/BothWrap"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@{`WarrantyId ` + favoritesResponse.warrantyId}"
                    android:textColor="@color/ebony_clay"
                    android:textSize="12.4sp"
                    android:visibility="gone"
                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</layout>