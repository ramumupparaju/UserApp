<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="favoritesResponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse"/>
    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/margin_10"
        card_view:cardMaxElevation="@dimen/margin_10"
        card_view:contentPadding="@dimen/margin_0">

        <RelativeLayout
            style="@style/BothMatch"
            android:padding="@dimen/margin_10">

            <ImageView
                android:id="@+id/product_imageview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_imageview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>