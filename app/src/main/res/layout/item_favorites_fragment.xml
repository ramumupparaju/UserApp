<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="favoritesResponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_favorite_item"
            style="@style/MatchWrap"
            android:background="@drawable/list_item_selector"
            android:minHeight="70dp"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/brand_imageview"
                    style="@style/m75w75"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_imageview"
                    style="@style/m75w75"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                style="@style/Zero_wrap"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    style="@style/BothWrap"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@{favoritesResponse.productName}"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp"
                        />

                    <TextView
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@{favoritesResponse.price}"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp"
                        />

                    <TextView
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@{favoritesResponse.status}"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp"
                        />

                    <TextView
                        style="@style/BothWrap"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@{favoritesResponse.warrantyId}"
                        android:textColor="@color/ebony_clay"
                        android:textSize="12.4sp"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="@dimen/margin_10">

            <ProgressBar
                android:id="@+id/warranty_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="14"
                android:scaleY="8"/>

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/warranty_progress"
                android:layout_alignLeft="@id/warranty_progress"
                android:layout_alignRight="@id/warranty_progress"
                android:layout_alignTop="@id/warranty_progress"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="12/100"/>

        </RelativeLayout>

    </LinearLayout>


</layout>