<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="billFormatActivity"
            type="com.incon.connect.user.ui.billformat.BillFormatActivity"/>

        <variable
            name="productinforesponse"
            type="com.incon.connect.user.apimodel.components.productinforesponse.ProductInfoResponse"/>

    </data>

    <ScrollView
        android:id="@+id/scrollview_user_info"
        style="@style/BothMatch"
        android:fadeScrollbars="false"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:scrollbars="vertical">

        <RelativeLayout
            style="@style/BothMatch"
            >



                <RelativeLayout
                    android:id="@+id/text_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimaryDark">

                    <TextView
                        style="@style/BothWrap"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="INVOICE"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/text_dop"
                    style="@style/BothWrap"
                    android:layout_below="@id/text_invoice"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:text="Date of purchase :"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/text_bill_id"
                    style="@style/BothWrap"
                    android:layout_below="@id/text_dop"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:text="Bill ID :"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/text_invoice_no"
                    style="@style/BothWrap"
                    android:layout_below="@id/text_bill_id"
                    android:layout_marginRight="@dimen/margin_50"
                    android:layout_marginTop="10dp"
                    android:text="Invoice NO :"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/text_invoice_no"
                android:layout_marginTop="20dp"
                android:background="@color/dusty_gray"
                />

            <RelativeLayout
                android:id="@+id/relative_one"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/text_invoice_no">

                <View
                    android:id="@+id/view_center"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dusty_gray"/>

                <View
                    android:id="@+id/view_left"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:background="@color/dusty_gray"/>

                <View
                    android:id="@+id/view_right"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_2"
                    android:background="@color/dusty_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/view_center"
                    >

                    <RelativeLayout
                        android:id="@+id/text_showroom_details"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            style="@style/BothWrap"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="Show room details"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/text_showroom_name"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_showroom_details"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Show Room Name :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/text_showroom_address"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_showroom_name"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Address :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/text_contact_details"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_showroom_address"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Contact Details :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/text_gstn"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_contact_details"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="GSTN :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                </RelativeLayout>


                <RelativeLayout
                    style="@style/BothMatch"
                    android:layout_alignLeft="@+id/view_center"
                    >


                    <RelativeLayout
                        android:id="@+id/text_customer_details"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimaryDark">

                        <TextView
                            style="@style/BothWrap"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="Customer details"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/text_customer_name"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_customer_details"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Customer Name :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/text_customer_address"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_customer_name"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Address :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/text_customer_contact_details"
                        style="@style/BothWrap"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/text_customer_address"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginTop="20dp"
                        android:text="Contact Details :"
                        android:textColor="@color/ebony_clay"
                        android:textSize="15sp"/>


                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/view_below_center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/relative_one"
                android:background="@color/dusty_gray"
                />

            <TextView
                android:id="@+id/text_product_details"
                style="@style/BothWrap"
                android:layout_below="@id/view_below_center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="20dp"
                android:text="Product details :"
                android:textColor="@color/black"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/text_product_name"
                style="@style/BothWrap"
                android:layout_below="@id/text_product_details"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="20dp"
                android:text="Product name:"
                android:textColor="@color/ebony_clay"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_model_number"
                style="@style/BothWrap"
                android:layout_below="@id/text_product_name"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="20dp"
                android:text="Model no :"
                android:textColor="@color/ebony_clay"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_sn"
                style="@style/BothWrap"
                android:layout_below="@id/text_model_number"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="20dp"
                android:text="S/N :"
                android:textColor="@color/ebony_clay"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/text_price"
                style="@style/BothWrap"
                android:layout_below="@id/text_sn"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginTop="20dp"
                android:text="Price :"
                android:textColor="@color/ebony_clay"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/text_discount"
                style="@style/BothWrap"
                android:layout_below="@id/text_price"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginTop="20dp"
                android:text="Discount :"
                android:textColor="@color/ebony_clay"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/text_gst"
                style="@style/BothWrap"
                android:layout_below="@id/text_discount"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginTop="20dp"
                android:text="GST :"
                android:textColor="@color/ebony_clay"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/text_total"
                style="@style/BothWrap"
                android:layout_below="@id/text_gst"
                android:layout_marginLeft="@dimen/margin_50"
                android:layout_marginTop="20dp"
                android:text="Total :"
                android:textColor="@color/black"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/text_terms_conditions"
                style="@style/BothWrap"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text_total"
                android:layout_marginTop="20dp"
                android:text="Terms and conditions :"
                android:textColor="@color/ebony_clay"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text_connect"
                style="@style/BothWrap"
                android:layout_below="@id/text_terms_conditions"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Powered by CONNECT "
                android:textColor="@color/ebony_clay"
                android:textSize="18sp"/>

        </RelativeLayout>

    </ScrollView>

</layout>
