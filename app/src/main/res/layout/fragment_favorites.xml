<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="favorites"
            type="com.incon.connect.user.ui.favorites.FavoritesFragment"/>
    </data>

    <RelativeLayout
        style="@style/MatchWrap"
        android:background="@color/mercury">

        <include
            android:id="@+id/add_address_view"
            layout="@layout/item_favorites_horizontal_recyclview"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/addresses_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toLeftOf="@id/add_address_view"
            android:fadeScrollbars="false"
            android:scrollbarSize="4dp"
            android:scrollbarThumbHorizontal="@color/mercury"
            android:scrollbars="horizontal"/>

    <!--    <include
            android:id="@+id/list_header"
