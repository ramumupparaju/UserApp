<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BothMatch"
    android:background="@drawable/dialog_shadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_textView"
        style="@style/header_text_view"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:text="@string/action_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <!--invoice card view-->
        <android.support.v7.widget.CardView
            android:id="@+id/invoice_base"
            style="@style/MatchWrap"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            app:cardCornerRadius="@dimen/corner_radius">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="vertical">

            <Button
                android:id="@+id/dialog_first_button"
                style="@style/MatchWrap"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_weight="1"
                android:background="@drawable/btn_white_stroke_nevada_selector"
                android:textColor="@color/text_nevada_white_selected"
                android:textSize="@dimen/text_size_13" />

            <Button
                android:id="@+id/dialog_second_button"
                style="@style/MatchWrap"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_weight="1"
                android:background="@drawable/btn_white_stroke_nevada_selector"
                android:textColor="@color/text_nevada_white_selected"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

