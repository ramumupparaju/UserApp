<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BothMatch"
    android:background="@drawable/dialog_shadow"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <TextView
        android:id="@+id/dialog_title_textView"
        style="@style/MatchWrap"
        android:lineSpacingExtra="@dimen/text_size_13"
        android:padding="@dimen/margin_20"
        android:textColor="@color/colorEulaMessage"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/dialog_content_textView"
        style="@style/MatchWrap"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_20"
        android:paddingTop="@dimen/margin_30"
        android:textColor="@color/colorEulaMessage"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />


    <Button
        android:id="@+id/dialog_first_button"
        style="@style/style_tueo_button"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_20" />

    <Button
        android:id="@+id/dialog_second_button"
        style="@style/style_tueo_button"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_3"
        android:text="@string/action_cancel" />

</LinearLayout>

